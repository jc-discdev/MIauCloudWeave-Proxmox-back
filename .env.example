# Telegram
# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# OpenAI Configuration
OPENAI_API_KEY=openai_api_key_here
OPENAI_BASE_URL=openai_url_here

# Proxmox Configuration
# Proxmox host (without https://)
PROXMOX_HOST=proxmox.example.com
PROXMOX_PORT=8006

# Authentication Method 1: Username and Password
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=your_password_here

# Authentication Method 2: API Token (más seguro, recomendado)
# Para crear un token: Datacenter > Permissions > API Tokens
# PROXMOX_TOKEN_NAME=api-token-id
# PROXMOX_TOKEN_VALUE=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# SSL Verification (false para certificados autofirmados)
PROXMOX_VERIFY_SSL=false

# Default Node (nombre del nodo Proxmox, ej: pve, proxmox, node1)
PROXMOX_NODE=pve

# Storage Configuration
# Storage pool para VMs (ej: local-lvm, local-zfs, ceph)
PROXMOX_STORAGE=local-lvm
# Storage para ISOs y templates
PROXMOX_ISO_STORAGE=local
# Storage para snippets de cloud-init
PROXMOX_SNIPPETS_STORAGE=local

# Network Configuration
# Bridge de red (ej: vmbr0, vmbr1)
PROXMOX_BRIDGE=vmbr0
# VLAN tag (opcional, dejar vacío si no se usa)
PROXMOX_VLAN=

# Default VM/LXC Configuration
# Tipo por defecto: qemu (VM) o lxc (contenedor)
PROXMOX_DEFAULT_TYPE=qemu
# Template ID para clonar VMs (opcional)
PROXMOX_VM_TEMPLATE=
# Template para contenedores LXC (ej: ubuntu-22.04-standard_22.04-1_amd64.tar.zst)
PROXMOX_LXC_TEMPLATE=ubuntu-22.04-standard_22.04-1_amd64.tar.zst
